  <div class="msc_container cars_container" style="overflow-y: auto;-webkit-overflow-scrolling: touch"></div>
  <script id="cars_item_template" type="text/x-handlebars-template">
    {{#models}}
    <div class="cars_item">
      <div class="car_name">{{name}}</div>
      <div class="car_image">
        <img style="min-height:100px;padding-bottom: 50px"
             src="http://d39imkxg0jo8t9.cloudfront.net/cars/{{image}}" />
      </div>
      <dl>
        <dt>연비</dt>
        <dd class="car_mileage">{{mileage}}</dd>
        <dt>가격</dt>
        <dd class="price car_fuel">
          <strike style='{{discountdisplay}}'>{{originalprice}}</strike>{{discountprice}}
          <br/><span class='price_discription'>기본 거리 탁송 무료, 부가세 별도, 보험비 별도</span>
        </dd>
      </dl>
      <a href="{{preorderlink}}"
         class="car_reserv_btn action_link" target="_blank"
         data-action-category='모델주문' data-action-detail='{{code}} / {{name}}' data-area='MODEL_DETAIL' data-brand="{{brand}}" data-model='{{code}} / {{name}}' >선예약상담</a>
    </div>
    {{/models}}
  </script>

  <div class="msc_container page_container" style="overflow-y: auto;-webkit-overflow-scrolling: touch">

  </div>
